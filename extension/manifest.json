{
  "manifest_version": 3,
  "name": "Real Focus Assistant",
  "version": "1.0.0",
  "description": "AI-powered focus assistant to help you stay focused on your tasks",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

